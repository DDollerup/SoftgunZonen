@model List<ContactMessage>
@{
    ViewBag.Title = "Index";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label for="NewMessages">New Messages</label>
            <input type="text" readonly value="You have @(Model.Count) new messages!" />
        </div>
        <div class="col-12">
            <a class="btn" href="/Admin/CMS/ContactMessages">Go to messages</a>
        </div>
    </div>
</div>