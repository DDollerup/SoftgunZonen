@model Category
@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>

<form action="/Admin/CMS/EditCategory" method="post" enctype="multipart/form-data">
    <input type="hidden" name="ID" value="@(Model?.ID)" />
    <input type="hidden" name="Image" value="@(Model?.Image)" />
    <div class="row">
        <div class="col-12">
            <p>
                Here you can @ViewBag.Title
            </p>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" name="Title" value="@(Model?.Title)" required />
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="currentImage">Current Image</label>
                <img src="~/Content/Images/Categories/@(Model?.Image)" />
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="imageFile">Pick new image</label>
                <input type="file" name="imageFile" />
            </div>
        </div>
        <div class="col-12">
            <input type="submit" value="Save" class="pull-left" />
        </div>
    </div>
</form>